 <div id="wrapper">
 {{> header}}
	<div id="page-wrapper">
		<div class="graphs">
	     <div class="xs">
  	       <h3>Sửa sản phẩm</h3>
  	         <div class="tab-content">
						<div class="tab-pane active" id="horizontal-form">
							<form class="form-horizontal" method="POST" action="/products/{{product._id}}?_method=PUT" enctype="multipart/form-data">
								<div class="form-group">
									<label for="smallinput" class="col-sm-2 control-label label-input-sm">Tên sản phẩm</label>
									<div class="col-sm-8">
										<input type="text" name="nameProduct" class="form-control1 input-sm" value="{{product.Name}}" id="name" placeholder="Nhập tên sản phẩm ...">
									</div>
								</div>
								<div class="form-group">
									<label for="mediuminput" class="col-sm-2 control-label">Mô tả</label>
									<div class="col-sm-8">
										<textarea row="10" name="describeProduct" style="height: 6rem; resize: none;" class="form-control1" id="describe" placeholder="Nhập mô tả ...">{{product.Describe}}</textarea>
									</div>
								</div>
								<div class="form-group mb-n">
									<label for="largeinput" class="col-sm-2 control-label label-input-lg">Số lượng</label>
									<div class="col-sm-8">
										<input type="text" name="quantityProduct" class="form-control1 input-lg" value="{{product.Quantity}}" id="quantity" placeholder="Số lượng ...">
									</div>
								</div>
								<div class="form-group mb-n">
									<label for="largeinput" class="col-sm-2 control-label label-input-lg">Giá</label>
									<div class="col-sm-8">
										<input type="text" name="priceProduct" class="form-control1 input-lg" value="{{product.Price}}" id="price" placeholder="Giá ...">
									</div>
								</div>
								<div class="row">
        							<label style="width: 100%">
										<script>
											function changeImage(inp) {
												let fReader = new FileReader();
												fReader.readAsDataURL(inp.files[0]);
												fReader.onloadend = function(event){
													let img = document.getElementById("productImageShow");
													img.src = event.target.result;
												}
											}
										</script>
										<div class="col-sm-2" style="padding-right: 15px; font-weight: normal; text-align: right;">Thay đổi hình ảnh</div>
										<img id="productImageShow" style="width: 12rem; margin-left: 15px;" src="/image/{{product.Image}}">
										<input onchange="changeImage(this)" style="display: none;" type="file" name="productImage">
									</label>
      							</div>
	 							<div class="row">
									<div class="col-sm-8 col-sm-offset-2">
										<button class="btn-success btn">Submit</button>
										<button class="btn-default btn">Cancel</button>
										<button class="btn-inverse btn">Reset</button>
									</div>
								</div>
							</form>
						</div>
					</div>
      <!-- /#page-wrapper -->
    </div>
</div>